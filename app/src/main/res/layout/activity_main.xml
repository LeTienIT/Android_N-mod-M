<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ffe4c4">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#38FF00"
        android:gravity="center"
        android:text="RSA"
        android:textColor="#FF00FB"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFEA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#00FFDD"
            android:text="Nhập số"
            android:textColor="#FF8400"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtKey1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Số thứ nhất"
            android:inputType="textPersonName"
            android:textColor="#E53935"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFEA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#00FFDD"
            android:text="Nhập mũ"
            android:textColor="#FF8400"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtKey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Số mũ"
            android:inputType="textPersonName"
            android:textColor="#E53935"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFEA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#00FFDD"
            android:text="Nhập mod"
            android:textColor="#FF8400"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtKey3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Số thứ hai"
            android:inputType="textPersonName"
            android:textColor="#E53935"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thực hiện"
        android:textColor="#000"
        android:textSize="20sp"
        app:backgroundTint="#27C54A" />

    <TextView
        android:id="@+id/tvDayNhiPhan"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:hint="Dãy nhị phân"
        android:textColor="#000"
        android:textSize="18sp"
        android:background="#ffa500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00FFDD"
        android:text="Kết Quả Tính Toán"
        android:textColor="#FF8400"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvTinhToan"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:background="#00ff00"
        android:text="Kết quả"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Reset"
        android:textColor="#000"
        android:textSize="20sp"
        app:backgroundTint="#27C54A"  />
</LinearLayout>